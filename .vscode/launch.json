    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Launch quad_embed sphere",
            "program": "${workspaceFolder}/build/quad_embed",
            "args": [
                "-t",
                "${workspaceFolder}/data/models/target-meshes/QuadSphere.obj",
                "-l",
                "${workspaceFolder}/data/models/layouts/QuadSphereLayout.obj",
                "-e",
                "0.02",
                "-m",
                "12",
                "-i",
                "2",
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Launch quad_embed sphere noise",
            "program": "${workspaceFolder}/build/quad_embed",
            "args": [
                "-t",
                "${workspaceFolder}/data/models/target-meshes/QuadSphereNoise.obj",
                "-l",
                "${workspaceFolder}/data/models/layouts/QuadSphereLayout.obj",
                "-e",
                "0.02",
                "-m",
                "12",
                "-i",
                "2",
            ],
            "cwd": "${workspaceFolder}"
        }
    ]
}


